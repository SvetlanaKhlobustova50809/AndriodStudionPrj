<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Кнопка назад -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад" />

    <!-- Поле для ввода логина -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Логин"
        android:inputType="textPersonName" />

    <!-- Поле для ввода пароля -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:inputType="textPassword" />

    <!-- Поле для ввода email -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <!-- Поле для ввода возраста -->
    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Возраст"
        android:inputType="number" />

    <!-- Поле для выбора пола -->
    <EditText
        android:id="@+id/genderEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пол (M/F)"
        android:inputType="text" />

    <!-- Поле для ввода веса -->
    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Вес (кг)"
        android:inputType="numberDecimal" />

    <!-- Поле для ввода роста -->
    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Рост (м)"
        android:inputType="numberDecimal" />

    <!-- Поле для выбора уровня активности -->
    <EditText
        android:id="@+id/activityLevelEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Уровень активности"
        android:inputType="text" />

    <!-- Поле для ввода цели -->
    <EditText
        android:id="@+id/goalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Цель (снижение веса, поддержание, набор)"
        android:inputType="text" />

    <!-- Кнопка для регистрации -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться" />
</LinearLayout>
