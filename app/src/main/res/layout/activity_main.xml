<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start|center_vertical">

        <!-- ImageView для изображения профиля -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user"
            android:layout_marginEnd="8dp" /> <!-- Отступ между изображением и текстом -->

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, User"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

    </LinearLayout>


    <!-- Tomorrow Header -->
    <TextView
        android:id="@+id/tomorrow_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomorrow"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

    <!-- Microelements -->
    <LinearLayout
        android:id="@+id/microelements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/violet"
        android:layout_marginTop="16dp">

        <!-- Microelements Titles -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/proteins_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proteins"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fats_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fats"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/carbo_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Carbo"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/calories_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Microelements Values -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/proteins_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3.99"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fats_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5.75"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/carbo_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7.22"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/calories_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="88"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <!-- Water Label -->
    <TextView
        android:id="@+id/water_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

    <!-- Water Info -->
    <LinearLayout
        android:id="@+id/water_info"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/glasses_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="glasses / "
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/litres_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.4"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/litres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" litres"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Add Water Button -->
    <Button
        android:id="@+id/add_water_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add a Glass of Water"
        android:textColor="#FFFFFF"
        android:background="#8A2BE2"
        android:layout_marginTop="8dp"/>

    <!-- Breakfast Header -->
    <TextView
        android:id="@+id/breakfast_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"/>

    <!-- Add Food Breakfast Button -->
    <Button
        android:id="@+id/add_food_breakfast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add Food"
        android:textColor="#FFFFFF"
        android:background="#8A2BE2"
        android:layout_marginTop="8dp"/>

    <!-- Lunch Header -->
    <TextView
        android:id="@+id/lunch_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"/>

    <!-- Add Food Lunch Button -->
    <Button
        android:id="@+id/add_food_lunch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add Food"
        android:textColor="#FFFFFF"
        android:background="#8A2BE2"
        android:layout_marginTop="8dp"/>

    <!-- Dinner Header -->
    <TextView
        android:id="@+id/dinner_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"/>

    <!-- Add Food Dinner Button -->
    <Button
        android:id="@+id/add_food_dinner_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add Food"
        android:textColor="#FFFFFF"
        android:background="#8A2BE2"
        android:layout_marginTop="8dp"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Home"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/nav_dishes"
            android:src="@drawable/ic_main"
            android:contentDescription="Dishes"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <ImageButton
            android:id="@+id/nav_meals"
            android:src="@drawable/ic_menu"
            android:contentDescription="Meals"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <ImageButton
            android:id="@+id/nav_profile"
            android:src="@drawable/ic_progress"
            android:contentDescription="Profile"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </LinearLayout>

</LinearLayout>
